rules_version = '2';

service cloud.firestore {
  match /databases/{database}/documents {
  
    // Helper Functions
    function isSignedIn() {
      return request.auth != null;
    }

    function isOwner(userId) {
      return request.auth.uid == userId;
    }
    
    function getUserData(userId) {
      return get(/databases/$(database)/documents/users/$(userId)).data;
    }

    function isAdmin() {
      return getUserData(request.auth.uid).isAdmin == true;
    }

    // USER-SPECIFIC DATA
    match /users/{userId} {
      allow read: if isSignedIn();
      allow write: if isOwner(userId);

      // Subcollections for user data
      match /dailyTasks/{taskId} {
        allow read, write: if isOwner(userId);
      }
      match /timeTrackerSessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
      match /focusSessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
       match /pomodoroSessions/{sessionId} {
        allow read, write: if isOwner(userId);
      }
      match /roadmaps/{roadmapId} {
        allow read, write: if isOwner(userId);
      }
      match /challenges/{challengeId} {
        allow read, write: if isOwner(userId);
      }
       match /dailyClaims/{claimId} {
        allow read, write: if isOwner(userId);
      }
       match /rewards/{rewardId} {
        allow read, write: if isOwner(userId);
      }
    }
    
    // PUBLIC OR SEMI-PUBLIC DATA
    match /announcements/{announcementId} {
      allow read: if true;
      allow write: if isAdmin();
    }

    match /polls/{pollId} {
      allow read: if true;
      allow create, delete: if isAdmin();
      allow update: if isSignedIn() || isAdmin(); 
    }
    
    match /resourceSections/{sectionId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /resources/{resourceId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
    match /dailySurprises/{surpriseId} {
        allow list: if isSignedIn();
        allow get: if isSignedIn();
        allow write: if isAdmin();
    }
    
    match /quizzes/{quizId} {
        allow read: if true;
        allow write: if isAdmin();
    }

    // CHAT & SOCIAL
    match /global_chat/{messageId} {
      allow read: if isSignedIn();
      allow create: if isSignedIn();
      allow delete: if isAdmin();
    }

    match /chats/{chatId} {
      function isParticipant() {
        return request.auth.uid in resource.data.users;
      }
      allow read, write: if isParticipant();
      
      match /messages/{messageId} {
        allow read, write: if isParticipant();
      }
    }

    match /friendRequests/{requestId} {
      allow read, write: if isSignedIn();
    }

    // ADMIN & CONFIG
     match /referrals/{referralId} {
        allow read, write: if isSignedIn();
    }
    
    match /supportTickets/{ticketId} {
      allow read: if isAdmin() || isOwner(resource.data.userId);
      allow create: if isSignedIn();
      allow update, delete: if isAdmin();
    }

    match /ai_access_tokens/{tokenId} {
      allow read, write: if isAdmin();
    }

    match /appConfig/{configId} {
      allow read: if true;
      allow write: if isAdmin();
    }
    
     match /featureShowcases/{showcaseId} {
        allow read: if true;
        allow write: if isAdmin();
    }
    
     match /globalGifts/{giftId} {
        allow read: if true;
        allow write: if isAdmin();
     }
  }
}
